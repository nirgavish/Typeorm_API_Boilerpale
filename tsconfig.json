{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*", "json.d.ts", "_framework/app.ts", "_framework/routes.ts", "_framework/utils", "_framework/utils", "_framework/middleware"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
